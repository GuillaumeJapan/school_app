<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Addressable</th>
      <th>Label</th>
      <th>Country</th>
      <th>Zip code</th>
      <th>Prefecture</th>
      <th>City</th>
      <th>Addr1</th>
      <th>Addr2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.addressable_id %></td>
        <td><%= address.label %></td>
        <td><%= address.country %></td>
        <td><%= address.zip_code %></td>
        <td><%= address.prefecture %></td>
        <td><%= address.city %></td>
        <td><%= address.addr1 %></td>
        <td><%= address.addr2 %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

